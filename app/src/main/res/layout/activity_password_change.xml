<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    tools:context=".PasswordChangeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="기존 비밀번호" />

        <EditText
            android:id="@+id/edtGijonPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/border"
            android:inputType="textPassword"
            android:padding="10dp"
            android:text="" />
        <TextView
            android:id="@+id/tvFindPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="비밀번호를 잊으셨나요?"
            android:textColor="#008DE9" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="새 비밀번호" />

        <EditText
            android:id="@+id/edtNewPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/border"
            android:inputType="textPassword"
            android:padding="10dp"
            android:text="" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="새 비밀번호 재입력" />

        <EditText
            android:id="@+id/edtNewPasswordCheck"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/border"
            android:inputType="textPassword"
            android:padding="10dp"
            android:text="" />

        <TextView
            android:id="@+id/tvNewPasswordCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="*비밀번호를 다시 확인해주세요."
            android:textColor="#ff0000" />

        <Button
            android:id="@+id/btnPasswordSave"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:background="#008DE9"
            android:text="저장"
            android:textColor="#ffffff"
            android:textSize="17dp" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="#C9C9C9"
            android:text="취소"
            android:textColor="#000000"
            android:textSize="17dp" />


    </LinearLayout>


</LinearLayout>