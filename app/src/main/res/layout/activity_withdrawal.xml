<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WithdrawlActivity">
<!--check box, button ok, cancel -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/tvWithdrawalId"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="로그인이 필요합니다."
            android:textSize="15dp"
            android:background="@drawable/border"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="위 아이디가 탈퇴 처리 됩니다."
            android:paddingLeft="5dp"
            android:textSize="12dp"
            android:textColor="#FA0000"/>

        <EditText
            android:id="@+id/edtWithdrawalPassword"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="계속하려면 비밀번호를 입력하세요."
            android:textSize="15dp"
            android:background="@drawable/border2"/>

        <TextView
            android:id="@+id/tvLostPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="비밀번호를 잊으셨나요?"
            android:paddingLeft="5dp"
            android:textColor="#1B6CA0"
            android:textSize="12dp"/>

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="회원탈퇴 후, 모든 데이터가 영구적으로 삭제되어 복구할 수 없게 됩니다."
            android:textSize="12dp"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/WithdrawalCheck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="유의사항을 모두 확인하였으며, 회원 탈퇴합니다."
                android:textColor="#646464" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnWithdrawalOk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="11dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="2"
                    android:background="#008DE9"
                    android:text="회원탈퇴하기"
                    android:textColor="#ffffff" />

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="11dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="#C9C9C9"
                    android:text="취소"
                    android:textColor="#000000" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>